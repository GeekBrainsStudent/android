<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/cosmos</item>
        <item name="materialButtonStyle">@style/Widget.Calc.ButtonStyle</item>
        <item name="editTextStyle">@style/Widget.Calc.EditTextStyle</item>
    </style>

    <style name="Widget.Calc.EditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:hint">0</item>
        <item name="android:inputType">number</item>
        <item name="android:editable">true</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Widget.Calc.ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetLeft">@dimen/btn_margin_start</item>
        <item name="android:insetRight">@dimen/btn_margin_end</item>
        <item name="android:insetTop">@dimen/btn_margin_top</item>
        <item name="android:insetBottom">@dimen/btn_margin_bottom</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/signal_black</item>
    </style>

    <style name="Widget.Calc.ButtonStyle.BS" parent="Widget.Calc.ButtonStyle">
        <item name="icon">@drawable/ic_action_name</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.Calc.ButtonStyle.Red" parent="Widget.Calc.ButtonStyle">
        <item name="backgroundTint">@color/crime</item>
    </style>

    <style name="Widget.Calc.ButtonStyle.Blue" parent="Widget.Calc.ButtonStyle">
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>